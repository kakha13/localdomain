{
  "$schema": "https://raw.githubusercontent.com/nicoulaj/tauri/refs/heads/dev/crates/tauri-schema-generator/schemas/config.schema.json",
  "productName": "LocalDomain",
  "version": "0.1.2",
  "identifier": "ge.any.localdomain.program",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "beforeBundleCommand": "node scripts/pre-bundle.cjs"
  },
  "app": {
    "windows": [
      {
        "title": "LocalDomain",
        "width": 900,
        "height": 650,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../resources/*"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "Developer ID Application: KAKHA GIORGASHVILI (9KW3WQ579Q)"
    },
    "windows": {
      "digestAlgorithm": "sha256"
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "policykit-1",
          "ca-certificates",
          "curl"
        ]
      }
    }
  }
}
